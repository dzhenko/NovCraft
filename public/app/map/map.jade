.container
    .panel.panel-success
        .panel-body
            h3 All users
            .well.pull-right
                .form-group
                    .col-md-12
                        input.form-control(id="searchTextFilter" placeholder="search" type="text", ng-model="search" required)
            table.table.table-hover.table-striped
                thead
                    tr.success
                        th Username
                        th Coordinates
                        th Message
                        th Scan
                        th Attack
                tbody
                    tr(ng-repeat="user in allUsers | filter: search")
                        td {{ user.username }}
                        td {{ user.coordinates }}
                        td
                            a.btn.btn-md.btn-primary(href="#/message/{{user._id}}")
                                span.glyphicon.glyphicon-pencil.text-success
                                span Message
                        td
                            a.btn.btn-md.btn-primary(href="#/scan/{{user._id}}")
                                span.glyphicon.glyphicon-search.text-warning
                                span Scan
                        td
                            a.btn.btn-md.btn-primary(href="#/attack/{{user._id}}")
                                span.glyphicon.glyphicon-screenshot.text-danger
                                span Attack